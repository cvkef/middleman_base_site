gem 'middleman-favicon-maker'   # Favicon Generator
gem 'therubyracer'              # Javascript Boost Compile
gem 'oj'                        # Javascript Boost Compile


###########################
# Layout
###########################
gem 'slim'
gem 'bootstrap-sass'
